<% if notice %>
<p id="notice"><%= onotice %></p>
<% end %>

<h3> Your Pragmatic Catalog </h1>
 <hr>
 <% @products.each do |product| %>
 <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
        Price : <span class="price"><%= product.price %></span><br>
        <span class="price"><%= link_to 'More', product %></span>
    </div>
</div>
<hr>
<% end %>